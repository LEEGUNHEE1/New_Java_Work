package com.day18;

import java.awt.Button;
import java.awt.Frame;
import java.awt.Label;
import java.awt.TextField;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class Test8 extends Frame implements ActionListener {

	private static final long serialVersionUID = 1L;

	private TextField[] tf = new TextField[4];
	private Label result = new Label("", Label.LEFT);
	private Button btn1, btn2;

	public Test8() {

		String title[] = { "이름", "국어", "영어", "수학", "총점" };

		setTitle("성적처리"); // 맨 위에 창 이름
		setLayout(null); // 수동 배치 하겠다.

		for (int i = 0; i < 5; i++) {

			Label lbl = new Label();
			lbl.setText(title[i]);

			lbl.setBounds(10, (i + 1)*30, 50, 20);
			add(lbl);

			if (i != 4) {

				tf[i] = new TextField();

				tf[i].setBounds(80, (i + 1)*30, 70, 20);
				// 감시카메라 달거야
				add(tf[i]);

			} else {
				result.setBounds(80, (i + 1)*30, 70, 20);
				add(result);
			}

		}

		// 결과 버튼 만들고야
		btn1 = new Button("결과");
		btn1.setBounds(180, 30, 60, 20);
		// 카메라1
		// 카메라2

		add(btn1);
		// 종료 버튼
		btn2 = new Button("종료");
		btn2.setBounds(180, 60, 60, 20);
		// 카메라
		add(btn2);

		addWindowListener(new WindowAdapter() { // 종료버튼 만들기
			@Override
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}

		});

		setSize(260, 180); // 창 크기
		setResizable(false); // 창 크기 조절(최대화) 못하게 하는거
		setVisible(true); // 화면에 보이게 하는거
	}

	public static void main(String[] args) {
		new Test08();
	}

	@Override
	public void actionPerformed(ActionEvent e) {

	}

}